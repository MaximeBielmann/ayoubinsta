<% if current_user.admin %>

    <div class="section-top-border white">
        <div class="container">
            <div class="row">
                <div class="col-2">
                    
                </div>
                <div class="col-8">
                    <h1 class="mb-30">Ajouter un compte</h1>
                    
                    <form>
                      <div class="form-group">
                        <label for="accountName">Nom du compte (sans le @)</label>
                        <input type="text" class="form-control" id="accountName" aria-describedby="emailHelp" placeholder="nom du compte">
                      </div>
                      <div class="form-group">
                        <label for="accountCategory">Example select</label>
                        <select class="form-control" id="accountCategory">
                          <option>Food</option>
                          <option>Lifestyle</option>
                          <option>Sport</option>
                          <option>Tech</option>
                          <option>Mode</option>
                        </select>
                      </div>
                      <button type="submit" class="btn btn-primary">Ajouter</button>
                    </form>
                    
                </div>
            </div>
        </div>
    </div>

<% else %>

    <div class="section-top-border white">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <h1>Vous n'avez pas accès à cette page</h1>
                </div>
            </div>
        </div>
    </div>

<% end%>