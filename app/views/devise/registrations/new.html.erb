<div class="section-top-border white">
  <div class="container">
      <div class="row">
          <div class="col-2">
              
          </div>
          <div class="col-8">
              <h2>S'inscrire</h2>
  
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
            
              <div class="field">
                <%= f.label :email %><br />
                <%= f.email_field :email, class: "single-input", autofocus: true, autocomplete: "email" %>
              </div>
            
              <div class="field">
                <%= f.label :mot_de_passe %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> caract√®res minimum)</em>
                <% end %><br />
                <%= f.password_field :password, class: "single-input", autocomplete: "new-password" %>
              </div>
            
              <div class="field">
                <%= f.label :confirmation_mot_de_passe %><br />
                <%= f.password_field :password_confirmation, class: "single-input", autocomplete: "new-password" %>
              </div>
            
              <div class="actions">
                <%= f.submit "S'inscrire", class: "genric-btn primary-border circle" %>
              </div>
            <% end %>
            
            <%= render "devise/shared/links" %>
              
          </div>
      </div>
  </div>
</div>