<div class="section-top-border white">
    <div class="container">
        <div class="row">
            <div class="col-2">
                
            </div>
            <div class="col-8">
              
                <h2>Se connecter</h2>

                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="field">
                  <%= f.label :email %><br />
                  <%= f.email_field :email, class: "single-input", autofocus: true, autocomplete: "email" %>
                </div>
              
                <div class="field">
                  <%= f.label :mot_de_passe %><br />
                  <%= f.password_field :password, class: "single-input", autocomplete: "current-password" %>
                </div>
              
                <% if devise_mapping.rememberable? %>
                  <div class="field">
                    <%= f.check_box :remember_me, class: "primary-checkbox" %>
                    <%= f.label :se_souvenir_de_moi %>
                  </div>
                <% end %>
              
                <div class="actions">
                  <%= f.submit "Se connecter", class: "genric-btn primary-border circle" %>
                </div>
              <% end %>
              
              <%= render "devise/shared/links" %>
                
            </div>
        </div>
    </div>
</div>